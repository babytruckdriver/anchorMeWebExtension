{

  "manifest_version": 2,
  "name": "AnchorMe",
  "version": "1.0",

  "description": "WebExtension written to set a reading mark in the pages you choose. Never forget where your reading finish last time.",
  "homepage_url": "https://github.com/babytruckdriver/anchorMeWebExtension",

  "icons": {
    "48": "icons/logo.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["background-script.js"]
  },

  "browser_action": {
    "default_icon": "icons/logoAction32.png"
  }

}
